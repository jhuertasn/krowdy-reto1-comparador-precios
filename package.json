{
  "name": "clase1-2026-extension",
  "version": "1.0.0",
  "description": "Chrome extension - Scraping de Falabella (Vite + TypeScript)",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build && node ./scripts/copy-manifest.js",
    "watch:build": "vite build --watch",
    "watch:manifest": "nodemon --watch dist --ext js --exec \"node ./scripts/copy-manifest.js\"",
    "watch": "yarn watch:build & yarn watch:manifest",
    "preview": "vite preview"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/chrome": "^0.0.195",
    "nodemon": "^2.0.22"
  }
}
