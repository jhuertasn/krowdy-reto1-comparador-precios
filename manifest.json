{
  "manifest_version": 3,
  "name": "Comparador de Precios Krowdy",
  "version": "2.0",
  "permissions": ["scripting", "activeTab", "storage", "tabs"], 
  "host_permissions": [
    "https://www.falabella.com.pe/*",
    "https://listado.mercadolibre.com.pe/*",
    "https://www.mercadolibre.com.pe/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.falabella.com.pe/*"],
      "js": ["content/falabella.js"]
    },
    {
      "matches": ["https://www.mercadolibre.com.pe/*", "https://listado.mercadolibre.com.pe/*"],
      "js": ["content/mercadoLibre.js"]
    }
  ]
}